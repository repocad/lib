import boxPlate

def columnDistance = 900
def rowDistance = 300

def boxesPerColumn = 3

def columns = 4
def rows = 8

repeat 0 to columns using i {
  def startPositionX = columnDistance * i
  repeat 0 to boxesPerColumn using j {
    def spacingX = columnDistance / boxesPerColumn
    def x = startPositionX + spacingX * j
    plate(spacingX rowDistance x 0 3)
  }
  
  line(startPositionX + 21 0 startPositionX + 21 2000)
  line(startPositionX + 7 0 startPositionX + 7 2000)  
  
  line(startPositionX - 7 0 startPositionX - 7 2000)
  line(startPositionX - 21 0 startPositionX - 21 2000)  
}