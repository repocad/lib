#some simple outlines of people for adding scale to drawings

# x: position 
# y: position
# h: height of the person
# s: seed (between 1 and 10) change to get different outlines)

function human (x y h s) {
  #leg
  function leg(x y seed) {
   line(x - 100 y x + 100 y + 600) 
    line(x - 100 y x - 200 y + 600) 
}
 leg(0 0 1)
 leg(300 0 1)

  #torso

 #arms

 #head  
circle(x y + h 150)
}

human(0 0 1800 1)