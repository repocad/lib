#a function to draw a simple outline of a human

# x: position 
# y: position
# h: height of the person
# s: seed change to get different outlines)

function human (x y h s) {
  
#variable points based on seed nr
a1 = 50 * s
b1 = -50 * s

a = a1 + x
b = b1 + y
  #legs

   line(a y b y + 600) 
   line( a y x  y + 600) 
   line(a y x + 200 y + 600) 
   line(a y x y + 600) 

  #torso
line(x + 200 y + 600 a + x 1300)
line(b y + 600 b + x 1300)

 #left arm
line(b 1300 -500 + x  1000)
line(b 1500 -500 + x 1000)

 #right arm
line(a 1300 500 + x 1000)
line(a 1500 500 + x 1000)

 #head  
circle(x y + h 150)
}

#test:
human(0 0 1800 1)
human(1200 0 1600 2)
human(2100 0 1200 3)