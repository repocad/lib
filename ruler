#a paper ruler in CM

for i <- -100 to 100 {
    line(0 i 4 i)
}

for i <- -20 to 21 {
    a = i * 5
    line(0 a 6 a)
}

for i <- -10 to 11 {
    a = i * 10
    cm = a / 10
    line(0 a 8 a)
    text(9 a - 1 5 cm + 10)
}

#border
line (0 -105 0 105)
line (0 105 20 105)
line (0 -105 20 -105)
line (20 -105 20 105)