#a collection of basic geometries for repocad
#use these in other scripts by typing 
#"import geometry2d" in the script (without ")

def addTwo(a b) {
a + b
}

text(0 0 20 addTwo(2 3))

#### RECTANGLE ####

#PARAMETERS:
# x1 = corner1 x
# y1 = corner1 y
# x2 = corner1 x
# y2 = corner1 y

def rectangle (x1 y1 x2 y2) {
  line(x1 y1 x1 y2)
  line(x2 y2 x1 y2)
  line(x2 y1 x2 y2)
  line(x1 y1 x2 y1)
}

#example
repeat -5 to -1 def i {
  repeat -4 to 1 def j {
    def a = i * 20
    def b = j * 22
    rectangle(a b a + 5 b + 5)
  }
}

#### TRIANGLE ####

#PARAMETERS:
# x = center x
# y = center y
# d = distance to corners

def triangle(x y d) {
  def p1y = y + d
  def p2x = x + d
  def p3x = x - d
  def offsetY = d / 3
  line(x p1y p2x y - offsetY)
  line(p2x y - offsetY p3x y - offsetY)
  line(x p1y p3x y - offsetY)
} 

#### SQUARE ####
def square(neg pos) {
  line(neg neg neg pos)
  line(neg pos pos pos)
  line(pos pos pos neg)
  line(pos neg neg neg)
}

#example
repeat 0 to 4 def i {
  repeat -4 to 1 def j {
    def a = i * 20
    def b = j * 22
    triangle(a b 5)
  }
}

#ARC TOOLS
def arcArray (cX cY rowSize radial) {
  repeat 3 to 22 def i {
    def multiplied = i * rowSize
    def startAngle = radians(radial - 105)
    def endAngle = radians(radial - 75)  
    arc(cX cY multiplied startAngle endAngle )
  }
}