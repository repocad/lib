#RESPONSIBLE
def jens(x as Number y as Number) = {
    text(x - 5 y - 5 18 "J")
    line(x + 7 y + 10 x + 7 y - 10)
}
def kristin(x as Number y as Number) = {
    text(x - 5 y - 5 18 "K")
    line(x + 7 y + 10 x + 7 y - 10)
}


