#a scaleable lamp 
#that can be cut from thin sheet metal, plastic or wood

#width and length in mm
def size = 200
def h = size / 2

circle(0 0 44) #bulb cutout

line(-0.34 * h 0.465 * h 0.34* h 0.465 * h) #top fold line
line (0.74 * h 1.22 * h -0.74 * h 1.22 * h)

line(0.465 * h 0.34 * h 0.425 * h 0.42 * h)
line(0.34 * h 0.465 * h 0.425 * h 0.42 * h)
arc(0.425 * h 0.42 * h 9 1.1 3.6) #

line (1.18 * h 0.82 * h 1.22 * h 0.74 * h)