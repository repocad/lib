function triangle(x1 x2){
dif = x2 - x1
mid = x1 + dif / 2
h = mid / 5
line mid h x2 mid * -1 #right side
line x1 mid * -1 x2 mid * -1 #bottom
line x1 mid * -1 mid h #left side
} 

#example
#for i <- 0 to 70
#triangle(i * 2 40)

function rectangle (x1 y1 x2 y2){
line x1 y1 x1 y2
line x2 y2 x1 y2
line x2 y1 x2 y2
line x1 y1 x2 y1
}

#example
for i <- 0 to 4 {
  for j <- 0 to 4 {
    a = i * 20
    b = j * 22
    rectangle(a b a + 10 b + 10)
  }
}