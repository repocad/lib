  text(2 y + 6.5 6 dist1 + dist2 + dist3 + dist4) #DIST ACC
  text(9 y + 31 4 windVel4)
  text(3 y + 31 4 windDir4)
  text(-33 y + 6.5 6 toInt(wca4)) #WCA
