repeat 0 to 21 using i { #antal lodrette streger
  repeat 0 to 21 using j { #antal vandrette streger
  
    def a = i * 15 #afstand lodrette streger
    def b = j * 15 #afstand vandrette streger
    
    line(0 b 300 b) #tegn vandrette streger
    line(a 300 a 0) #tegn lodrette streger
  } 
}