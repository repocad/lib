# "PROTRACTOR FOR AVIATION USE"

import geometry2d

def d = -128 / 2

text(-20 1 5 "NM   1 :  500.000")
rectangle(d * -1 d * -1 d d)

#DEGREE TICS

repeat -45 to 45 using i {

def x = sin(radians(i))
def y = cos(radians(i))
line(0 0 y * d x * d)
}




#GRID

repeat -7 to 8 using j {
  def k = j * 3.704 * 2
  def l = (d * -1) - 12
    line(d + 12 k l k)
    line(k d + 12 k l)
}