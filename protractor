# "PROTRACTOR FOR AVIATION USE"

import geometry2d

def d = -128 / 2

text(-20 1 5 "NM   1 :  500.000")
rectangle(d * -1 d * -1 d d)

#DEGREE TICS

#repeat 0 to 45 using i {

#deg tics here..
def v = 22.5
def x1 = cos(radians(v))
def y1 = sin(radians(v))
def factor = 1 / y1
def x2 = x1 * factor

line(0 0 x2 d)

#}




#GRID

repeat -7 to 8 using j {
  def k = j * 3.704 * 2
  def l = (d * -1) - 12
    line(d + 12 k l k)
    line(k d + 12 k l)
}