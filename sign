import geometry2d
import dimensions

def scale = 200
def content = "hello there"
def marginHeight = 2
def marginWidth = 6

def r as Vector = text(0 0 scale content)
def bottom = (marginHeight * -1)
def left = marginWidth * -1
def right = r.x + marginWidth
def top = r.y + marginHeight - 1

dim(Vector(left bottom) Vector(left top))

rectangle(left bottom right top)