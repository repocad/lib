#REPOCAD single stroke font

#A
def A(x as Number y as Number hgt as Number) = {
def h = hgt / 3
def hh = -1 * h
def mh = -0.5 * h
def mh2 = 0.5 * h
line(hh + x 0 + y 0 + x 3 * h + y)
line(h + x 0 + y 0 + x 3 * h + y)
line(mh + x h / 0.7 + y mh2 + x h / 0.7 + y)
}

#B
def B(x as Number y as Number hgt as Number) = {
def h = hgt / 3
line(-1 * h 0 0 3 * h)
line(1 * h 0 0 3 * h)
line(-0.5 * h h / 0.7 0.5 * h h / 0.7)
}

#test
A(0 0 8)
A(10 0 8)
