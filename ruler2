import geometry2d

#a paper ruler in CM

var5 = 0
var10 = 0

for i <- 0 to 200 {
    var5 = var5 + 1 #increment vars
    var10 = var10 + 1 #increment vars
    if (var5 < 5) {
        line(0 i 4 i )
    }
    if(var5 > 4) { #every 5mm the line is longer
        line(0 i 6 i)
        var5 = 0
    }
    if(var10 > 9) {#every 10mm the line is longest
        line(0 i 8 i)
        text(9 i - 1 5 i + 1)
        var10 = 0
    }
}
line(0 -1 8 -1)
text(9 -1 5 0)



rectangle(0 -5 20 205)